<div class="container">
  <div class="header">
    <h3><%= notice %></>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <article>
        <% @blogs.reverse_order.each do |blog| %>
        <div class="contents-area">
          <div class="contents-header">
              <%= "#{blog.user.name}" %>
          </div>
          <div>
            <div class="contents">
              <p>
                <% if blog.image.present? %>
                <%= image_tag blog.image, class: 'image-area' %>
                <% end %>
              </p>
              <div class="contents-footer btn">
                <p class="sentence"><%= link_to  blog.content, blog_path(blog.id) %></p>
                <p>
                  <%= link_to '編集', edit_blog_path(blog.id), class: 'edit-btn'  %> |
                  <%= link_to '削除', blog, method: :delete, data: { confirm: '削除していいですか?'}, class: 'delete-btn'  %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </article>
    </div>
  </div>
</div>
