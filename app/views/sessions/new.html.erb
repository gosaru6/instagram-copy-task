<div class="login-area">
  <h3><%= notice %></h3>
  <h1>ログイン</h1>
  <%= form_with(scope: :session, url: sessions_path) do |f| %>
    <table class="login-table">
      <tr>
        <td><%= f.label :メール %></td>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <td><%= f.label :パスワード %></td>
        <td><%= f.password_field :password %></td>
      </tr>
    </table>
      <p class="user_btn"><%= f.submit "ログイン" %></p>
  <% end %>
</div>
